generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  bookings  Booking[]

  @@map("users")
}

model Booking {
  id          String   @id @default(uuid())
  description String?
  roomId      String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  room        Room     @relation(fields: [roomId], references: [id])
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime @default(now())

  @@index([roomId])
  @@index([userId])
  @@map("bookings")
}

model Room {
  id          String         @id @default(uuid())
  name        String
  slug        String         @unique
  capacity    Int
  resources   RoomResource[]
  isAvailable Boolean
  bookings    Booking[]
  createdAt   DateTime       @default(now())

  @@map("rooms")
}

model RoomResource {
  id     String @id @default(uuid())
  name   String
  roomId String
  room   Room   @relation(fields: [roomId], references: [id])

  @@index([roomId])
}
